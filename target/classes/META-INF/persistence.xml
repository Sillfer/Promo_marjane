<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="marjane_promo" transaction-type="RESOURCE_LOCAL">
        <class>com.simplon.marjane.entity.AdminEntity</class>
        <class>com.simplon.marjane.entity.BranchEntity</class>
        <class>com.simplon.marjane.entity.CategoryEntity</class>
        <class>com.simplon.marjane.entity.CityEntity</class>
        <class>com.simplon.marjane.entity.PromotionEntity</class>
        <class>com.simplon.marjane.entity.RespRayonEntity</class>
        <class>com.simplon.marjane.entity.SubCategoryEntity</class>
        <class>com.simplon.marjane.entity.SuperAdminEntity</class>
        <class>com.simplon.marjane.entity.AdminEntity</class>
        <class>com.simplon.marjane.entity.BranchEntity</class>
        <class>com.simplon.marjane.entity.CategoryEntity</class>
        <class>com.simplon.marjane.entity.CityEntity</class>
        <class>com.simplon.marjane.entity.PromotionEntity</class>
        <class>com.simplon.marjane.entity.RespRayonEntity</class>
        <class>com.simplon.marjane.entity.SubCategoryEntity</class>
        <class>com.simplon.marjane.entity.SuperAdminEntity</class>
        <properties>

            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/promo_marjane"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="password"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/> <!-- DB Dialect -->
            <property name="hibernate.hbm2ddl.auto" value="update"/> <!-- create / create-drop / update -->
            <property name="show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
